<div>
<%= form_tag records_path, :method => :get, :class => "form-inline clearfix" do %>
    <%= hidden_field_tag :direction, params[:direction] %>
    <%= hidden_field_tag :sort, params[:sort] %>
    <div class="input-group col-sm-8">
      <label for="q" class="sr-only">Search...</label>
      <input autofocus="autofocus" class="search_q q form-control" id="q" name="q" placeholder="Search..." type="text">
      <span class="input-group-btn">
        <button type="submit" class="btn btn-primary search-btn form-control" id="search">
          <span class="submit-search-text">Search</span>
          <span class="glyphicon glyphicon-search"></span>
        </button>
      </span>
    </div>
<% end %>
</div>
